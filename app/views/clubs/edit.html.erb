
<%= link_to root_path, class: 'back-button' do %>
  <%=image_tag 'backbutton.svg', alt: 'Back', class: 'back-button-img' %>
  Back
<% end %>
<div class='form-container'>
  <h2 class="edit-activity">Edit Club</h2>



  <%= simple_form_for @club, html: { class: 'form-horizontal' } do |f| %>
  <div class='form-container'>
    <div class="form-group">
    <%= f.input :name, input_html: { class: 'form-control' }, wrapper_html: { class: 'col-sm-10' }, label_html: { class: 'col-sm-2 control-label' } %>
  </div>
  <div class="form-group">
    <%= f.input :details, input_html: { class: 'form-control'}, wrapper_html: { class: 'col-sm-10' }, label_html: { class: 'col-sm-2 control-label' } %>
  </div>
  <div class="form-group">
    <%= f.input :address, input_html: { class: 'form-control'}, wrapper_html: { class: 'col-sm-10' }, label_html: { class: 'col-sm-2 control-label' } %>
  </div>
  <div class="form-group">
    <%= f.input :instagram_link, input_html: { class: 'form-control' }, wrapper_html: { class: 'col-sm-10' }, label_html: { class: 'col-sm-2 control-label' } %>
  </div>
  <div class="form-group">
    <%= f.input :phone_number, as: :string, input_html: { class: 'form-control' }, wrapper_html: { class: 'col-sm-10' }, label_html: { class: 'col-sm-2 control-label' } %>
  </div>
  <div class="form-group">
    <%= f.input :image, as: :file, input_html: { class: 'form-control-file' }, wrapper_html: { class: 'col-sm-10' }, label_html: { class: 'col-sm-2 control-label' } %>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.button :submit, 'Edit Club', class: 'btn btn-primary' %>
    </div>
  </div>
  </div>
  <% end %>




  <%= render "shared/navbar" %>
