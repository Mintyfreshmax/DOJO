<%= link_to request.referrer || root_path, class: 'back-button' do %>
  <%=image_tag 'backbutton.svg', alt: 'Back', class: 'back-button-img' %>
  Back
  <% end %>

<div class='club-bodybag'>
<h1 class='dash-title'>Account</h1>
  <div class="club-info d-flex">
   <div class='user-info-container d-flex'>
      <div class='profile-picture'>
          <%= image_tag 'babycroc.JPG', alt: 'Default Profile Picture', class: 'profile-picture-img' %>
      </div>
      <div class='user-info'>
        <p><%= current_user.username %></p>
        <div class='profile-button'>
          <%= link_to 'Show Profile', profile_path %>
        </div>
      </div>
  </div>
</div>
    <div class='buttons-container'>
        <h4>Settings</h4>
      <div class='personal-info-button'>
      <%= link_to personal_info_path do %>
        <%= image_tag 'user.png', class: 'button-icon' %>
        Personal Information
        <% end %>
      </div>
        <h4>Your Dojos</h4>
      <div class='create-dojo-button'>
       <%= link_to personal_info_path do %>
        <%= image_tag 'add-circle-svgrepo-com.svg', class: 'button-icon' %>
        Create a Dojo
        <% end %>
      </div>
        <div class='manage-dojos-button'>
        <%= link_to personal_info_path do %>
        <%= image_tag 'edit-3-svgrepo-com.svg', class: 'button-icon' %>
        Manage Dojo's
        <% end %>
        </div>
        <h4>Support</h4>
      <div class='contact-page-button'>
      <%= link_to personal_info_path do %>
        <%= image_tag 'mail-alt-svgrepo-com.svg', class: 'button-icon' %>
        Contact Page
        <% end %>
        <%= link_to 'Contact Page', contact_path %>
      </div>
        <h4>Legal</h4>
      <div class='terms-of-service-button'>
      <%= link_to personal_info_path do %>
        <%= image_tag 'license-svgrepo-com.svg', class: 'button-icon' %>
        Terms of Service
        <% end %>
      </div>
      <div class="settings-borders"></div>
        <div class='privacy-policy-button'>
        <%= link_to personal_info_path do %>
        <%= image_tag 'privacy-dashboard-svgrepo-com.svg', class: 'button-icon' %>
        Privacy Policy
        <% end %>
        </div>
      <div class="logout-button">
       <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
      </div>
    </div>



