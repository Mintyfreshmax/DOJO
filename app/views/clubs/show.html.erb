<div class="activity-image" style="position: relative;">
  <%= link_to request.referrer || root_path, class: 'back-button' do %>
  <i class="fa-solid fa-backward-step"></i>
  <% end %>
  <%= image_tag 'lewagon.jpg', alt: 'le wagon school logo', class: 'club-img' %>
</div>

<div class= "club-details">
  <div class="club-title">
    <h1>le wagon's dojo</h1>
  </div>
    <div class="club-desc" data-controller="toggle-text">
      <p id="club-description">
        <%= truncate(@club.details, length: 100) %>
        <% if @club.details.length > 100 %>
          <span data-toggle-text-target="moreText" style="display: none;"><%= @club.details[100..-1] %></span>
          <button data-toggle-text-target="button" data-action="click->toggle-text#toggle">Learn More</button>
        <% end %>
      </p>
   </div>

    <div class="more-info d-flex">
      <div class="social-links">
        <div class='location-tag'>
          <i class="fa-solid fa-location-dot"></i>
          <p class='club-icon-text'>Cantersteen 10, 1000 Bruxelles</p>
        </div>
        <div class='instagram-tag'>
          <i class="fa-brands fa-instagram"></i>
          <span class='club-icon-text'>@lewagonbelgium</span>
        </div>
        <div class='phone-tag'>
          <i class="fa-solid fa-phone"></i>
          <span class='club-icon-text'>+32 4 78 566 980</span>
        </div>
      </div>
      <div class="map">
        <%= image_tag "mapsss.png", class: 'maps' %>
      </div>
    </div>
</div>

<h2 class='activities-title-index'>Activities</h2>

<div id="activities-index">
    <%= render 'shared/activities' %>
  </div>

<%= render "shared/navbar" %>
