<body class="home-page">

  <div class="navtop" style="display: flex; justify-content: space-between; align-items: center; padding: 10px;">
    <div class="logo" style="display: flex; gap: 10px;">
      <h1>DOJO</h1>
    </div>
    <div class="navbuttons">
      <div class="login">
        <%= link_to new_user_session_path do %>
        <p>Login</p>
        <% end %>
      </div>
      <div class="signup">
        <%= link_to new_user_registration_path do %>
        <p>Sign Up</p>
        <% end %>
        </div>
      </div>
    </div>
    </div>
    <div class="home-body">
      <div class='typed-container'>
        <span data-controller='typed' data-typed-strings-value="<%=['“Your Passport to Local Activities and Fitness On-the-Go."','“Global travel, local workouts.”', '"Fitness without borders."','“Find your gym, meet your tribe.”', '"Stay fit, stay connected, stay Dojo."'] %>"></span>
      </div>
      <div class='search-bar'>
        <%= render 'shared/search_bar' %>
      </div>
    </div>

  </body>
