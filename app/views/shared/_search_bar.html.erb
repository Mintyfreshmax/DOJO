
<div class="search-container">
  <%= form_with(url: activities_path, method: :get, class: 'd-flex') do %>
  <div class="d-flex gap-3">
    <%= text_field_tag :location, params[:location], class: 'form-control', placeholder: 'Enter your location' %>
    <%= text_field_tag :activity, params[:activity], class: 'form-control', placeholder: 'Search for an activity' %>

  </div>
<% end %>

</div>
