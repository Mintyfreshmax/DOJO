<div class='form-container'>
  <h2 class="edit-activity">Sign Up</h2>
     <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
     <%= f.error_notification %>
      <div class='form-container'>
        <div class="form-group">
        <%= f.input :first_name, required: true, input_html: { class: 'form-control' }, wrapper_html: { class: 'col-sm-10' }, label_html: { class: 'col-sm-2 control-label' } %>
      </div>
      <div class="form-group">
        <%= f.input :last_name, required: true, input_html: { class: 'form-control' }, wrapper_html: { class: 'col-sm-10' }, label_html: { class: 'col-sm-2 control-label' } %>
      </div>
      <div class="form-group">
        <%= f.input :username, required: true, input_html: { class: 'form-control' }, wrapper_html: { class: 'col-sm-10' }, label_html: { class: 'col-sm-2 control-label' } %>
      </div>
      <div class="form-group">
        <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control' }, wrapper_html: { class: 'col-sm-10' }, label_html: { class: 'col-sm-2 control-label' } %>
      </div>
      <div class="form-group">
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { class: 'form-control' }, wrapper_html: { class: 'col-sm-10' }, label_html: { class: 'col-sm-2 control-label' } %>
      </div>
      <div class="form-group">
        <%= f.input :password_confirmation, required: true, input_html: { class: 'form-control-file' }, wrapper_html: { class: 'col-sm-10' }, label_html: { class: 'col-sm-2 control-label' } %>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.button :submit, 'Sign Up', class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
