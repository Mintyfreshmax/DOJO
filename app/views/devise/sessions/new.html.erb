<div class='form-container'>
  <h2 class="edit-activity">Login</h2>
   <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class='form-container'>
          <div class="form-group">
            <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control' }, wrapper_html: { class: 'col-sm-10' }, label_html: { class: 'col-sm-2 control-label' } %>
          </div>
          <div class="form-group">
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { class: 'form-control' }, wrapper_html: { class: 'col-sm-10' }, label_html: { class: 'col-sm-2 control-label' } %>
          </div>
          <div class="form-group">
            <%= f.input :remember_me, as: :boolean, input_html: { class: 'form-control' }, wrapper_html: { class: 'col-sm-10' }, label_html: { class: 'col-sm-2 control-label' } if devise_mapping.rememberable? %>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.button :submit, 'login', class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
  <% end %>
